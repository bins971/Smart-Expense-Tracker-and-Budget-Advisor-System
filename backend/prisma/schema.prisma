generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  username      String
  email         String         @unique
  password      String
  gender        String
  age           Int
  dob           DateTime
  workingStatus String
  mfaEnabled    Boolean        @default(false)
  unusualActivityDetected Boolean @default(false)
  createdAt     DateTime       @default(now())
  budgets       Budget[]
  expenses      Expense[]
  goals         Goal[]
  subscriptions Subscription[]
  budgetHistory BudgetHistory[]

  @@index([email])
}

model Budget {
  id            String   @id @default(uuid())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  totalAmount   Float
  savingsTarget Float    @default(0)
  currentAmount Float
  startDate     DateTime
  endDate       DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}

model Expense {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  category    String
  name        String
  amount      Float
  mood        String?
  isHighValue Boolean  @default(false)
  date        DateTime @default(now())
  description String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([date])
}

model Goal {
  id               String   @id @default(uuid())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
  name             String
  amount           Float
  saved            Float    @default(0)
  description      String?
  startDate        DateTime
  endDate          DateTime
  goalAccomplished Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
}

model Subscription {
  id              String    @id @default(uuid())
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  name            String
  amount          Float
  cycle           String    @default("Monthly")
  startDate       DateTime  @default(now())
  category        String    @default("Subscription")
  nextPaymentDate DateTime?
  createdAt       DateTime  @default(now())

  @@index([userId])
}

model BudgetHistory {
  id              String   @id @default(uuid())
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  totalAmount     Float
  remainingAmount Float
  startDate       DateTime
  endDate         DateTime
  archivedDate    DateTime @default(now())
  expenses        Json
  achievement     String?
  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([archivedDate])
}
